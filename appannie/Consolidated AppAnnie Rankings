      "def iter_json_gzip(filename):\n",
      "    with gzip.open(filename,'rt') as file_iter:\n",
      "        c = 0\n",
      "        for line in file_iter:\n",
      "            c +=1\n",
      "            if c > LINE_LIMIT:\n",
      "                break\n",
      "            yield ujson.loads(line)"
